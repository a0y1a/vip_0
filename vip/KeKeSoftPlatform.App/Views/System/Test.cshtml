@model List<UploadFileData>
@{
    ViewBag.Title = "Index";
    List<string> oldImgUrlList = new List<string>();
    using (KeKeSoftPlatformDbContext db = new KeKeSoftPlatformDbContext())
    {
        var test = db.Test.FirstOrDefault();
        if (string.IsNullOrWhiteSpace(test.ImgUrl) == false)
        {
            oldImgUrlList.AddRange(test.ImgUrl.Split(new string[] { @"///" }, StringSplitOptions.RemoveEmptyEntries));
        }
    }
}

@section head{
    <link href="/Scripts/FileInput/css/fileinput.css" rel="stylesheet" />
    <style type="text/css">
        .file-drop-zone {
            margin: 0;
            padding: 0;
        }

        .file-preview {
            border: none;
            padding: 0;
        }

