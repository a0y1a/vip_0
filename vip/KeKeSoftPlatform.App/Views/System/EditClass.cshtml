@model EditClassData
@{
    Layout = null;
    List<SelectListItem> classTypeList = new List<SelectListItem>();
    classTypeList.AddRange(ClassType.WeiKe.ToSelectDataSource().Select(m => new SelectListItem
    {
        Text = m.Text,
        Value = m.Value
    }));
}

@using (Html.Form(formId:"submitEditClassForm"))
{
    <div class="modal fade" id="editClassModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">编辑班级</h4>
                </div>
                <div class="modal-body">
                    @Html.HiddenFor(m => m.ClassId)
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(m => m.Code)：</label>
                        <div class="col-md-6">@Html.TextBoxFor(m => m.Code, new { @class = "form-control" })</div>
                        <div class="col-md-4" id="validateCodeError">@Html.ValidationMessageFor(m => m.Code, null, new { @id = "validateCode" })</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(m => m.Name)：</label>
                        <div class="col-md-6">@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })</div>
                        <div class="col-md-4" id="validateNameError">@Html.ValidationMessageFor(m => m.Name, null, new { @id = "validateName" })</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(m => m.Type)：</label>
                        <div class="col-md-6">@Html.DropDownListFor(m => m.Type, classTypeList, new { @class = "form-control" })</div>
                        <div class="col-md-4">@Html.ValidationMessageFor(m => m.Type)</div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">@Html.DisplayNameFor(m => m.Description)：</label>
                        <div class="col-md-6">@Html.TextAreaFor(m => m.Description, new { @class = "form-control" })</div>
                        <div class="col-md-4">@Html.ValidationMessageFor(m => m.Description, null, new { @id = "validateName" })</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" id="close">关闭</button>
                    <button type="button" class="btn btn-primary" id="submitForm">保存</button>
                </div>
            </div>
        </div>
    </div>
}



