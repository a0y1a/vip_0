@model ResetStudentPwdData
@{
    ViewBag.Title = "重置密码";
}
@using (Html.Form())
{
    @Html.HiddenFor(m => m.StudentId)
    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(m => m.Code)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Code</p></div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">@Html.DisplayNameFor(m => m.Name)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Name</p></div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 input-required-content" for="NewPwd">@Html.DisplayNameFor(m => m.NewPwd)</label>
        <div class="col-md-5">@Html.PasswordFor(m => m.NewPwd, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.NewPwd))</div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2 input-required-content" for="ConfirmNewPwd">@Html.DisplayNameFor(m => m.ConfirmNewPwd)</label>
        <div class="col-md-5">@Html.PasswordFor(m => m.ConfirmNewPwd, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ConfirmNewPwd))</div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"></label>
        <div class="col-md-5">@Html.Submit()</div>
    </div>
}