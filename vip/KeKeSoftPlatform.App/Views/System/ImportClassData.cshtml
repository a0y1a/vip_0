@{
    ViewBag.Title = "导入班级数据";
}

@section head{
    <link href="/Content/fileinput.css" rel="stylesheet" />
}

@using (Html.BeginFormForAdmin("GetClassData", "System", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label class="col-sm-2 control-label">选择Excel：</label>
        <div class="col-sm-6">
            <input id="fileUploadExcel" class="file-loading" name="ImageUrl" type="file" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-9">@Html.Submit()</div>
    </div>
}

@section scripts{
    <script src="/Scripts/fileinput.js"></script>
    <script src="/Scripts/fileinput_locale_zh.js"></script>
    <script type="text/javascript">
        $(function () {
            $('#fileUploadExcel').fileinput({
                language: 'zh', //设置语言
                minFileCount: 0,
                maxFileCount: 1,
                enctype: 'multipart/form-data',
                allowedPreviewTypes: ['xls', 'xlsx'],
                allowedFileExtensions: ['xls', 'xlsx'],
                showUpload: false,
                showCaption: true,
                showPreview: false,
                browseClass: "btn btn-primary",
                previewFileIcon: "<i class='glyphicon geglyphicon-king'></i>"
            });
        })
    </script>
}

