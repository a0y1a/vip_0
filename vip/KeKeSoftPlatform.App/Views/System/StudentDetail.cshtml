@model StudentDetailData
@{
    ViewBag.Title = "学生详情";
}

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-md-2 control-label" for="ClassId">@Html.DisplayNameFor(m => m.ClassName)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.ClassName</p></div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Name">@Html.DisplayNameFor(m => m.Name)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Name</p></div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Sex">@Html.DisplayNameFor(m => m.Sex)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Sex.EnumMetadataDisplay()</p></div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Code">@Html.DisplayNameFor(m => m.Code)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Name</p></div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Mobile">@Html.DisplayNameFor(m => m.Mobile)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Mobile</p></div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label" for="Birthday">@Html.DisplayNameFor(m => m.Birthday)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Birthday</p></div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">@Html.DisplayNameFor(m => m.IsZhuXiao)</label>
        <div class="col-md-5"><p class="form-control-static">@(Model.IsZhuXiao ? "是" : "否")</p></div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Address">@Html.DisplayNameFor(m => m.Address)</label>
        <div class="col-md-5"><p class="form-control-static">@Model.Address</p></div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2" for="Description">@Html.DisplayNameFor(m => m.Description)</label>
        <div class="col-md-6" style="margin-top:8px;">@Html.Raw(Model.Description)</div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"></label>
        <div class="col-md-5"><a class="btn btn-primary btn-sm" href="@Request.UrlReferrer.AbsoluteUri"><span class="glyphicon glyphicon-arrow-left"></span> 返回</a></div>
    </div>
</div>