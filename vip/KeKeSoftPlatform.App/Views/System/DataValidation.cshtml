@model ValiateData
@{
    ViewBag.Title = "数据验证";
}

@using (Html.Form())
{
    <div class="form-group">
        <label class="col-md-1 control-label"></label>
        <div class="col-md-11">
            <p style="border-bottom:2px solid rgb(0, 161, 150); font-size:20px !important;"><span class="label label-danger" style="background: rgb(0, 161, 150); font-weight:normal;">使用 FluentValidation 对字符串（string）进行验证</span></p>
        </div>
    </div>
    <div class="form-group">
        <label for="ValidatePwd" class="control-label col-md-2 input-required-content">@Html.DisplayNameFor(m => m.ValidatePwd)</label>
        @*<div class="col-md-4">@Html.PasswordFor(m => m.Pwd, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.Pwd))</div>
            注意：使用 Html.PasswordFor()时，输入框将不会显示Model中对应的值 *@        
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidatePwd, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidatePwd))</div>
        <label for="ValidateConfirmPwd" class="control-label col-md-2 input-required-content">@Html.DisplayNameFor(m => m.ValidateConfirmPwd)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateConfirmPwd, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateConfirmPwd))</div>
    </div>
    <div class="form-group">
        <label for="ValidateMobile" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateMobile)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateMobile, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateMobile, null))</div>
        <label for="ValidateInteger" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateInteger)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateInteger, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateInteger, null))</div>
    </div>
    <div class="form-group">
        <label for="ValidatePositiveInteger" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidatePositiveInteger)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidatePositiveInteger, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidatePositiveInteger, null))</div>
        <label for="ValidateNonNegativeInteger" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateNonNegativeInteger)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateNonNegativeInteger, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateNonNegativeInteger, null))</div>
    </div>
    <div class="form-group">
        <label for="ValidateRealNumber" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateRealNumber)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateRealNumber, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateRealNumber, null))</div>
        <label for="ValidatePositiveRealNumber" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidatePositiveRealNumber)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidatePositiveRealNumber, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidatePositiveRealNumber, null))</div>
    </div>
    <div class="form-group">
        <label for="ValidateNonNegativeRealNumber" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateNonNegativeRealNumber)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateNonNegativeRealNumber, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateNonNegativeRealNumber, null))</div>
        <label for="ValidatePostCode" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidatePostCode)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidatePostCode, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidatePostCode, null))</div>
    </div>
    <div class="form-group">
        <label for="ValidateIDNumber" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateIDNumber)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateIDNumber, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateIDNumber, null))</div>
        <label for="ValidateEmail" class="col-md-2 control-label input-required-content">@Html.DisplayNameFor(m => m.ValidateEmail)</label>
        <div class="col-md-4">@Html.TextBoxFor(m => m.ValidateEmail, new { @class = "form-control" }).Append(Html.ValidationMessageFor(m => m.ValidateEmail, null))</div>
    </div>

    <div class="form-group">
        <label class="col-md-1 control-label"></label>
        <div class="col-md-11">
            <p style="border-bottom:2px solid rgb(0, 161, 150); font-size:20px !important;"><span class="label label-danger" style="background: rgb(0, 161, 150); font-weight:normal;">使用 FluentValidation 对基本类型（int、decimal等）进行验证</span></p>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-1 control-label"></label>
        <div class="col-md-11">
            <p style="border-bottom:2px solid rgb(0, 161, 150); font-size:20px !important;"><span class="label label-danger" style="background: rgb(0, 161, 150); font-weight:normal;">使用 javascript 进行验证</span></p>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label input-required-content">限制输入整数</label>
        <div class="col-md-4"><input type="number" class="form-control" onkeyup="this.value=this.value.replace(/\D/g,'')" onafterpaste="this.value=this.value.replace(/\D/g,'')" /></div>
        <label class="col-md-2 control-label input-required-content">限制输入数字</label>
        <div class="col-md-4"><input type="number" class="form-control" onkeyup="checknum(this)" onafterpaste="checknum(this)" /></div>
    </div>
    
    <div class="form-group">
        <label class="col-md-2 control-label"></label>
        <div class="col-md-4">@Html.Submit()</div>
    </div>
}

@section scripts{
    <script type="text/javascript">
        $(function () {
            function checknum(obj) {
                if (/^\d+\.?\d{0,2}$/.test(obj.value)) {
                    obj.value = obj.value;
                } else {
                    obj.value = obj.value.substring(0, obj.value.length - 1);
                }
            }
        })
    </script>
}