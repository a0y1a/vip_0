@{
    ViewBag.Title = "格式转换";
}

<div class="form-horizontal">
    <div class="form-group">
        <label class="col-md-3 control-label">01.</label>
        <div class="col-md-4"><p class="form-control-static"><a href="javascript:void(0)" id="convertFirst">数字转人民币大写</a></p></div>
    </div>
</div>

<div class="modal fade" id="convertFirstModal" tabindex="-1" role="dialog" aria-labelledby="convertFirstModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="convertFirstModalLabel">数字转人民币大写</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-md-4 control-label">输入一个数字：</label>
                        <div class="col-md-5"><input type="number" class="form-control" id="convertFirstInput" /></div>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4 control-label">转换后的结果：</label>
                        <div class="col-md-5"><p class="form-control-static" id="convertFirstResult"></p></div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $(function(){
            $("#convertFirst").on("click", function () {
                $("#convertFirstModal").modal();
            })
            $("#convertFirstInput").on("change", function () {
                $.post("/system/ConvertToRMB", { number: $(this).val() }, function (result) {
                    $("#convertFirstResult").text(result.Data);
                })
            })
        })
    </script>
}