@model Pager<T_News>
@{
    ViewBag.Title = "公告列表";
}

<a href="/System/CreateNews" class="btn btn-primary btn-sm" style="margin:0 0 20px 20px"><span class="glyphicon glyphicon-plus"></span> 添加公告</a>

<div class="container-fluid">

    @foreach (var news in Model.Data)
    {
        <div class="panel panel-success">
            <div class="panel-heading">@news.CreateDate.ToString("yyyy-MM-dd") <span class="pull-right"><a href="/System/DeleteNews?newsId=@news.Id" onclick="return confirm('确认删除？')">删除</a></span></div>
            <div class="panel-body">
                <p class="form-control-static">@Html.Raw(news.Content)</p>
            </div>
        </div>
    }

    <ul class="pager">
        @if(Model.PageNum > 1)
        {
            <li class="previous"><a href="/System/NewsList?pageNum=@(Model.PageNum - 1)">&larr; 上一页</a></li>
        }
        else
        {
            <li class="previous"><a href="#">&larr; 上一页</a></li>
        }
        @if(Model.PageNum < Model.PageCount)
        {
            <li class="next"><a href="/System/NewsList?pageNum=@(Model.PageNum + 1)">下一页 &rarr;</a></li>
        }
        else
        {
            <li class="next"><a href="#">下一页 &rarr;</a></li>
        }
    </ul>
</div>
