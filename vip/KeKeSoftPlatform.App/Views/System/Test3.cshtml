    ViewBag.Title = "Index";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Index</title>
</head>
<body>
    <div id="app">
        <p>{{ message }}</p>
        <button v-on:click="vModifyMessage">modify message</button>
    </div>
</body>
</html>

<script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/vue/2.1.3/vue.js"></script>
<script type="text/javascript">
    var vm = new Vue({
        el: '#app',
        data: {
            message: "message"
        },
        methods: {
            vModifyMessage: function () {
                var date = new Date();
                this.messsage = date.getFullYear() + "-" + (date.getMonth() + 1) + "-" + date.getDay();
            }
        }
    })
</script>


